<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%-5level] %logger{36}: %msg%n" />
        </Console>
    </appenders>
    <Loggers>
        <Logger name="app.App" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="ocpp.CentralSystemServer15" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console" />
        </Root>
        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</configuration>